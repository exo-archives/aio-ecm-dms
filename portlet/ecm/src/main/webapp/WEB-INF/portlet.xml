<?xml version="1.0" encoding="UTF-8"?>
<portlet-app version="1.0" xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"> 
  
  
  <portlet>
    <description xml:lang="EN">Portlet Cms content</description>
    <portlet-name>JCRExplorerPortlet</portlet-name>
    <display-name xml:lang="EN">JCRExplorer Portlet</display-name>
    <portlet-class>org.exoplatform.webui.application.portlet.PortletApplicationController</portlet-class>    
    
    <init-param>
      <name>webui.configuration</name>
      <value>/WEB-INF/conf/portlet/ecm/JCRExplorerPortlet/webui/configuration.xml</value>
    </init-param>    

    <expiration-cache>0</expiration-cache>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>help</portlet-mode>
    </supports>
    <supported-locale>en</supported-locale>    
    <resource-bundle>locale.portlet.ecm.JCRExplorerPortlet</resource-bundle>    																														
    
    <portlet-info>
      <title>JCRExplorer Portlet</title>
      <short-title>jcr explorer</short-title>
      <keywords>portlet, explorer</keywords>
    </portlet-info>
    <portlet-preferences>
      <preference>
        <name>workspace</name>
        <value></value>
        <read-only>false</read-only>
      </preference>
      <preference>
        <name>path</name>     
        <value></value>        
        <read-only>false</read-only>
      </preference>
      <preference>
        <name>drive</name>     
        <value></value>        
        <read-only>false</read-only>
      </preference>
      <preference>
        <name>views</name>     
        <value></value>        
        <read-only>false</read-only>
      </preference>      
    </portlet-preferences>
  </portlet>  
  
  <portlet>
    <description xml:lang="EN">Portlet ECM Admin</description>
    <portlet-name>ECMAdminPortlet</portlet-name>
    <display-name xml:lang="EN">ECMAdmin Portlet</display-name>
    <portlet-class>org.exoplatform.webui.application.portlet.PortletApplicationController</portlet-class>    
    
    <init-param>
      <name>webui.configuration</name>
      <value>/WEB-INF/conf/portlet/ecm/ECMAdminPortlet/webui/configuration.xml</value>
    </init-param>    

    <expiration-cache>0</expiration-cache>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>help</portlet-mode>
    </supports>
    <supported-locale>en</supported-locale>    
    <resource-bundle>locale.portlet.ecm.ECMAdminPortlet</resource-bundle>    																														
    
    <portlet-info>
      <title>ECMAdmin Portlet</title>
      <short-title>ECM Admin</short-title>
      <keywords>ecm, admin</keywords>
    </portlet-info>
  </portlet> 
  
  <portlet>
    <description xml:lang="EN">Dialog Portlet</description>
    <portlet-name>DialogPortlet</portlet-name>
    <display-name xml:lang="EN">Dialog Portlet</display-name>
    <portlet-class>org.exoplatform.webui.application.portlet.PortletApplicationController</portlet-class>    
    
    <init-param>
      <name>webui.configuration</name>
      <value>/WEB-INF/conf/portlet/ecm/DialogPortlet/webui/configuration.xml</value>
    </init-param>    

    <expiration-cache>0</expiration-cache>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>help</portlet-mode>
      <portlet-mode>edit</portlet-mode>
    </supports>
    <supported-locale>en</supported-locale>    
    <resource-bundle>locale.portlet.ecm.DialogPortlet</resource-bundle>    																														
    
    <portlet-info>
      <title>Dialog Portlet</title>
      <short-title>ECM Dialog</short-title>
      <keywords>ecm, dialog</keywords>
    </portlet-info>
    <portlet-preferences>
      <preference>
        <name>workspace</name>
        <value>production</value>
        <read-only>false</read-only>
      </preference>
      <preference>
        <name>path</name>     
        <value>/</value>        
        <read-only>false</read-only>
      </preference>
      <preference>
        <name>type</name>     
        <value>exo:article</value>        
        <read-only>false</read-only>
      </preference>          
    </portlet-preferences>
  </portlet> 
  
  <portlet>
    <description xml:lang="EN">Portlet browse content</description>
    <portlet-name>BrowseContentPortlet</portlet-name>
    <display-name xml:lang="EN">Browse Content Portlet</display-name>
    <portlet-class>org.exoplatform.webui.application.portlet.PortletApplicationController</portlet-class>   
                   
    
    <init-param>
      <name>webui.configuration</name>
      <value>/WEB-INF/conf/portlet/ecm/BrowseContentPortlet/webui/configuration.xml</value>
    </init-param>    

    <expiration-cache>0</expiration-cache>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>help</portlet-mode>
      <portlet-mode>edit</portlet-mode>
    </supports>
    <supported-locale>en</supported-locale>    
    <resource-bundle>locale.portlet.ecm.BrowseContentPortlet</resource-bundle>    																														
    
    <portlet-info>
      <title>Browse Content Portlet</title>
      <short-title>Browse content</short-title>
      <keywords>portlet, content</keywords>
    </portlet-info>
    
    <portlet-preferences>    
      <preference>
        <name>workspace</name>
        <value>production</value>
        <read-only>false</read-only>
      </preference>            
      <preference>
        <name>path</name>     
        <value>/jcr:system/exo:ecm/exo:taxonomies</value>
        <read-only>false</read-only>
      </preference>            
      <preference>
        <name>documentName</name>     
        <value></value>
        <read-only>false</read-only>
      </preference>            
      <preference>
        <name>reference</name>     
        <value>true</value>
        <read-only>false</read-only>
      </preference>      
      <preference>
        <name>child</name>     
        <value>true</value>
        <read-only>false</read-only>
      </preference>            
      <preference>
        <name>queryLanguage</name>
        <value>xpath</value>
        <read-only>false</read-only>
      </preference>      
      <preference>
        <name>queryStatement</name>
        <value>/jcr:root/cms/publications//element(*, exo:article)</value>
        <read-only>false</read-only>
      </preference>      
      <preference>
        <name>isAddNew</name>
        <value>true</value>
        <read-only>false</read-only>
      </preference>      
      <preference>
        <name>queryType</name>
        <value></value>
        <read-only>false</read-only>
      </preference> 
      <preference>
        <name>queryStore</name>
        <value></value>
        <read-only>false</read-only>
      </preference>      
      <preference>
        <name>template</name>
        <value>PathList</value>        
        <read-only>false</read-only>
      </preference>      
      <preference>
        <name>boxTemplate</name>
        <value>DocumentView</value>
        <read-only>false</read-only>
      </preference>      
      <preference>
        <name>nbPerPage</name>
        <value>20</value>
        <read-only>false</read-only>
      </preference>                  
      <preference>
        <name>viewToolbar</name>
        <value>true</value>
        <read-only>false</read-only>
      </preference>
      <preference>
        <name>viewTagMap</name>
        <value>true</value>
        <read-only>false</read-only>
      </preference>   
      <preference>
        <name>viewComment</name>
        <value>true</value>
        <read-only>false</read-only>
      </preference>   
      <preference>
        <name>viewVote</name>
        <value>true</value>
        <read-only>false</read-only>
      </preference>                               
      <preference>
        <name>scriptName</name>
        <value></value>
        <read-only>false</read-only>
      </preference>
      <preference>      
        <name>usecase</name>
        <value>path</value>
        <!--
        <value>Document</value>
        <value>Using a JCR query</value>
        <value>Using a script</value>
         -->
        <read-only>false</read-only>
      </preference>            
    </portlet-preferences>    
  </portlet>    
</portlet-app>
