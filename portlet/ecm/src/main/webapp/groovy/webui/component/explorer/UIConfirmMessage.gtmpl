%>
<div class="UIForm $uicomponent.id">
  <%
    String msgValue = _ctx.appRes(uicomponent.getMessageKey());
    String[] msgArguments = uicomponent.getArguments();
    if(msgArguments.length > 0) {
	    for(i in 0..msgArguments.length-1){ 
	  	  msgValue = msgValue.replaceAll("\\{" + i + "\\}", msgArguments[i]);
		  }
    }
  %>
  <div class="HorizontalLayout">
    <div class="">
    	<div class="RecycleBinFull"><span></span></div>
    	<div class="Text"><%=msgValue%></div>   
    	<div style="clear: left"><span></span></div>
    </div>
	  <div class="UIAction"> 
	    <table class="ActionContainer" align="center">
	      <tr>
	        <td>
							<a href="<%=uicomponent.event("OK")%>" class="ActionButton LightBlueStyle">
	            <div class="ButtonLeft">
	              <div class="ButtonRight">
	                <div class="ButtonMiddle">
											OK
	                </div>
	              </div>
	            </div>
							</a>
	      	</td>
	      	<td>
							<a href="<%=uicomponent.event("Close")%>" class="ActionButton LightBlueStyle">
	            <div class="ButtonLeft">
	              <div class="ButtonRight">
	                <div class="ButtonMiddle">
											Close
	                </div>
	              </div>
	            </div>
							</a>
	      	</td>
	      </tr>          
	    </table>
	  </div>
	      <%// end render action%>
  </div>
</div>  
