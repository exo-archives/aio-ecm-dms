<% 
  import org.exoplatform.web.application.JavascriptManager;
  
  def rcontext = _ctx.getRequestContext() ;
  JavascriptManager jsmanager = rcontext.getJavascriptManager();
  
  jsmanager.importJavascript('eXo.webui.UIVerticalSlideTabs');
  def driveList = uicomponent.getDrives(uicomponent.getRepository()) ;
%>

<div class="UIDrivesBrowser" id="<%=uicomponent.getId()%>">
	<div class="UIRepository">
		<div class="RepositoryContainer">
			<div class="RepositoryTitle">	<%=_ctx.appRes("UIDrivesBrowser.title.repositoryList" )%></div>
			<div class="RepositoryList">
			 <div class="UIVerticalSlideTabs">
			 	<div class="UIVTab VTabSimpleStyle">
			 		<%
			 		String cssClass = "" ;
			 		for(String name in uicomponent.getRepositoryList()){			 			
			 			if(name.equals(uicomponent.getRepository())) cssClass = "SelectedTab" ;
			 			else cssClass = "NormalTab" ;
			 			String actionLink = uicomponent.event("SelectRepo","$name") ;
			 		%>
			 		<div class="$cssClass">
			 			<div class="TabLeft">
			 				<div class="TabRight">
			 					<div class="TabRepeat">
						 			<div class="LeftIcon"><span></span></div>
						 			<div class="TabLabel">
										<a href="$actionLink">$name</a>
									</div>
						 			<div style="clear: left"><span></span></div>
						 		</div>
						 	</div>
						</div>
			 		</div>
			 		<%}%>
			 	</div>
			 </div>
			 <div class="RepositoryDecorater"><span></span></div>
			</div>
		</div>
	</div>
	<div class="UIDrivesList">
		<div class="DrivesListTitleBG">
			<div class="DrivesListTitleBGRight">
				<div class="DrivesListTitle" >
					<%=_ctx.appRes("UIDrivesBrowser.title.repository" )%>:
					<%=uicomponent.getRepository()%>
				</div>
			</div>
		</div>
		<div class="DrivesListContainer" >
		<%
      def personalDrives = uicomponent.personalDrives(driveList) ;
			if(personalDrives.size() > 0) {			
		%>
			<div class="DrivesContent">	
  			<div class="DrivesListTitleBG">
					<div class="DrivesListTitleBGRight"> 
						<div class="DrivesListTitle" >
							<div class="Icon PersonalDrivesIcon"><%=_ctx.appRes("UIDrivesBrowser.title.PersonalDrives" )%></div>
						</div>
					</div>
			  </div>
					
				<div class="BrowserDecorator">
			    <div class="TopLeftCorner">
			      <div class="DecoratorTopRightCorner">
			        <div class="DecoratorTopCenterCorner"><span></span></div>
			      </div>
			    </div>
			    <div class="DecoratorMiddleLeft">
			      <div class="DecoratorMiddleRight">
			        <div class="DecoratorMiddle">
			          <%for(personalDrive in personalDrives) {%>
		              <div class="Drive">
		              	<div class="DriveContainer">
			              <%if(personalDrive.getIcon() != null && personalDrive.getIcon().length() > 0) {%>
			                <div class="Icon" onclick="<%=uicomponent.event("SelectDrive","${personalDrive.name}")%>"><img src="${personalDrive.icon}" width="48" height="41" /></div>
			              <%} else {%>
			                <div class="Icon UserDriveIcon" style="margin:auto" onclick="<%=uicomponent.event("SelectDrive","${personalDrive.name}")%>"><span></span></div>
			              <%}%>
			                <div class="DriveLabel">
			                  <div class="LeftBar">
			                    <div class="RightBar">
			                      <div class="MiddleBar">
			                        <a href="<%=uicomponent.event("SelectDrive","${personalDrive.name}")%>"><%=personalDrive.getName().substring(personalDrive.getName().lastIndexOf("|") + 1)%></a>
			                      </div>
			                    </div>
			                  </div>
			                </div>
			            	</div>    
		              </div>
			          <%}%>
								<div style="clear: left;"><span></span></div>
			        </div>
			      </div>
			    </div>
			    <div class="DecoratorBottomLeftCorner">
			      <div class="DecoratorBottomRightCorner">
			        <div class="DecoratorBottomCenterCorner"><span></span></div>
			      </div>
			    </div>
			  </div>
		  </div>
		<%}%>
    <%
      def groupDrives = uicomponent.groupDrives(driveList) ;
      if(groupDrives.size() > 0) {
    %>
      <div class="DrivesContent">	
   			<div class="DrivesListTitleBG">
					<div class="DrivesListTitleBGRight"> 
						<div class="DrivesListTitle" >
							<div class="Icon GroupDrivesIcon"><%=_ctx.appRes("UIDrivesBrowser.title.GroupDrives" )%></div>
						</div>
				  </div>
				</div>
					
				<div class="BrowserDecorator">
			    <div class="TopLeftCorner">
			      <div class="DecoratorTopRightCorner">
			        <div class="DecoratorTopCenterCorner"><span></span></div>
			      </div>
			    </div>
			    <div class="DecoratorMiddleLeft">
			      <div class="DecoratorMiddleRight">
			        <div class="DecoratorMiddle">
			          <%for(groupDrive in groupDrives) {%>
		              <div class="Drive">
		              	<div class="DriveContainer">
			              <%if(groupDrive.getIcon() != null && groupDrive.getIcon().length() > 0) {%>
			                <div class="Icon" onclick="<%=uicomponent.event("SelectDrive","${groupDrive.name}")%>"><img src="${groupDrive.icon}" width="48" height="41" /></div>
			              <%} else {%>
			                <div class="Icon GroupDriveIcon" style="margin:auto" onclick="<%=uicomponent.event("SelectDrive","${groupDrive.name}")%>"><span></span></div>
			              <%}%>
			                <div class="DriveLabel">
			                  <div class="LeftBar">
			                    <div class="RightBar">
			                      <div class="MiddleBar">
			                        <a href="<%=uicomponent.event("SelectDrive","${groupDrive.name}")%>"><%=groupDrive.getName().replace("|", "/")%></a>
			                      </div>
			                    </div>
			                  </div>
			                </div>
			            	</div>    
		              </div>
			          <%}%>
								<div style="clear: left;"><span></span></div>
			        </div>
			      </div>
			    </div>
			    <div class="DecoratorBottomLeftCorner">
			      <div class="DecoratorBottomRightCorner">
			        <div class="DecoratorBottomCenterCorner"><span></span></div>
			      </div>
			    </div>
			  </div>
		  </div>
		<%}%>  
      <div class="DrivesContent">	
  			<div class="DrivesListTitleBG">
					<div class="DrivesListTitleBGRight"> 
						<div class="DrivesListTitle" >
							<div class="Icon GeneralDriveIcon"><%=_ctx.appRes("UIDrivesBrowser.title.GeneralDrives" )%></div>
						</div>
					</div>
			  </div>      
					
				<div class="BrowserDecorator">
			    <div class="TopLeftCorner">
			      <div class="DecoratorTopRightCorner">
			        <div class="DecoratorTopCenterCorner"><span></span></div>
			      </div>
			    </div>
			    <div class="DecoratorMiddleLeft">
			      <div class="DecoratorMiddleRight">
			        <div class="DecoratorMiddle">
			          <%
			            def drives = uicomponent.generalDrives(driveList) ;
			            if(drives.size() > 0) {
			              for(drive in drives) {
			          %>
			              <div class="Drive">
			              	<div class="DriveContainer">
				              <%if(drive.getIcon() != null && drive.getIcon().length() > 0) {%>
				                <div class="Icon" onclick="<%=uicomponent.event("SelectDrive","${drive.name}")%>"><img src="${drive.icon}" width="48" height="41" /></div>
				              <%} else {%>
				                <div class="Icon DefaultDriveIcon Admin${drive.workspace}Icon" style="margin:auto" onclick="<%=uicomponent.event("SelectDrive","${drive.name}")%>"><span></span></div>
				              <%}%>
				                <div class="DriveLabel">
				                  <div class="LeftBar">
				                    <div class="RightBar">
				                      <div class="MiddleBar">
				                        <a href="<%=uicomponent.event("SelectDrive","${drive.name}")%>">${drive.name}</a>
				                      </div>
				                    </div>
				                  </div>
				                </div>
				            	</div>    
			              </div>
			          <%  
			              }
			            } else {
			          %>
			            <div class="EmptyDrives">
			            	<div class="ContainerEmptyDrives">
			            		<%=_ctx.appRes("UIDrivesBrowser.msg.empty-drives")%>
			            	</div>
			            </div>
			          <%}%>
								<div style="clear: left;"><span></span></div>
			        </div>
			      </div>
			    </div>
			    <div class="DecoratorBottomLeftCorner">
			      <div class="DecoratorBottomRightCorner">
			        <div class="DecoratorBottomCenterCorner"><span></span></div>
			      </div>
			    </div>
			  </div>
		  </div>		  		  
		  
		</div>
	</div>
	<div style="clear: left;"><span></span></div>
</div>