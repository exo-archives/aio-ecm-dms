<?xml version="1.0" encoding="ISO-8859-1"?>
<page-set>
  
  <page>
    <name>FileExplorer</name>
    <access-permissions>*:/platform/users</access-permissions>
    <edit-permission>*:/platform/administrators</edit-permission>
    
    <portlet-application>
    	<portlet>
    		<application-ref>ecm</application-ref>
				<portlet-ref>FileExplorerPortlet</portlet-ref>
				<preferences>
					<preference>
		        <name>repository</name>
		        <value>repository</value>
		        <read-only>false</read-only>
		      </preference>
		      <preference>
		        <name>workspace</name>
		        <value></value>
		        <read-only>false</read-only>
		      </preference>
		      <preference>
		        <name>path</name>     
		        <value></value>        
		        <read-only>false</read-only>
		      </preference>
		      <preference>
		        <name>drive</name>     
		        <value></value>        
		        <read-only>false</read-only>
		      </preference>
		      <preference>
		        <name>views</name>     
		        <value></value>        
		        <read-only>false</read-only>
		      </preference>
		      <preference>
		        <name>allowCreateFolders</name>     
		        <value></value>        
		        <read-only>false</read-only>
		      </preference>      
		      <preference>
		        <name>categoryMandatoryWhenFileUpload</name>     
		        <value>false</value>        
		        <read-only>false</read-only>
		      </preference>
		      <preference>
		        <name>uploadFileSizeLimitMB</name>     
		        <value>30</value>        
		        <read-only>false</read-only>
		      </preference>
		      <preference>
		        <name>usecase</name>
		        <value>selection</value>  
		      </preference>  
		      <preference>
		        <name>driveName</name>     
		        <value>Collaboration Center</value>        
		        <read-only>false</read-only>
		      </preference>
		      <preference>
		        <name>nodePath</name>     
		        <value>/</value>        
		        <read-only>false</read-only>
		      </preference>
		           <preference>
		        <name>trashHomeNodePath</name>     
		        <value>/Trash</value>        
		        <read-only>false</read-only>
		      </preference>   
		      <preference>
		        <name>trashRepository</name>     
		        <value>repository</value>        
		        <read-only>false</read-only>
		      </preference>   
		      <preference>
		        <name>trashWorkspace</name>     
		        <value>collaboration</value>        
		        <read-only>false</read-only>
					</preference>
				</preferences>
    	</portlet>
      <title>File Explorer</title>
			<access-permissions>*:/platform/users</access-permissions>     
      <show-info-bar>true</show-info-bar>
      <show-application-mode>true</show-application-mode> 
    </portlet-application> 
  </page>
  
  <page>
    <name>FastContentCreator</name>
    <access-permissions>*:/platform/users</access-permissions>
    <edit-permission>*:/platform/administrators</edit-permission>
    
    <portlet-application>
    	<portlet>
    		<application-ref>ecm</application-ref>
				<portlet-ref>FastContentCreatorPortlet</portlet-ref>
				<preferences>
					<preference>
		        <name>repository</name>
		        <value>repository</value>
		        <read-only>false</read-only>
		      </preference>
		      <preference>
		        <name>workspace</name>
		        <value>collaboration</value>
		        <read-only>false</read-only>
		      </preference>
		      <preference>
		        <name>path</name>     
		        <value>/Groups/platform/users/Documents</value>        
		        <read-only>false</read-only>
		      </preference>
		      <preference>
		        <name>type</name>     
		        <value>exo:article</value>        
		        <read-only>false</read-only>
		      </preference>
				</preferences>				
    	</portlet>
      <title>Fast Content Creator</title>
			<access-permissions>*:/platform/users</access-permissions> 
      <show-info-bar>true</show-info-bar>
      <show-application-mode>true</show-application-mode>
		</portlet-application>      
  </page>
  
  <page>
    <name>ContentBrowser</name>
    <access-permissions>*:/platform/users</access-permissions>
    <edit-permission>*:/platform/administrators</edit-permission>
    
    <portlet-application>
    	<portlet>
    		<application-ref>ecm</application-ref>
				<portlet-ref>ContentBrowserPortlet</portlet-ref>
				<preferences>
					<preference>
		        <name>repository</name>
		        <value>repository</value>
		        <read-only>false</read-only>
		      </preference>
		      <preference>
		        <name>workspace</name>
		        <value>collaboration</value>
		        <read-only>false</read-only>
		      </preference>            
		      <preference>
		        <name>path</name>     
		        <value>/Groups/platform/users/Documents</value>
		        <read-only>false</read-only>
		      </preference>            
		      <preference>
		        <name>documentName</name>     
		        <value></value>
		        <read-only>false</read-only>
		      </preference>            
		      <preference>
		        <name>reference</name>     
		        <value>true</value>
		        <read-only>false</read-only>
		      </preference>      
		      <preference>
		        <name>child</name>     
		        <value>true</value>
		        <read-only>false</read-only>
		      </preference>            
		      <preference>
		        <name>queryLanguage</name>
		        <value>xpath</value>
		        <read-only>false</read-only>
		      </preference>      
		      <preference>
		        <name>queryStatement</name>
		        <value>/jcr:root/Documents/Live//element(*, exo:article)</value>
		        <read-only>false</read-only>
		      </preference>      
		      <preference>
		        <name>isAddNew</name>
		        <value>true</value>
		        <read-only>false</read-only>
		      </preference>      
		      <preference>
		        <name>queryType</name>
		        <value></value>
		        <read-only>false</read-only>
		      </preference> 
		      <preference>
		        <name>queryStore</name>
		        <value></value>
		        <read-only>false</read-only>
		      </preference>      
		      <preference>
		        <name>template</name>
		        <value>PathList</value>        
		        <read-only>false</read-only>
		      </preference>      
		      <preference>
		        <name>boxTemplate</name>
		        <value>DocumentView</value>
		        <read-only>false</read-only>
		      </preference>      
		      <preference>
		        <name>nbPerPage</name>
		        <value>20</value>
		        <read-only>false</read-only>
		      </preference>                  
		      <preference>
		        <name>viewToolbar</name>
		        <value>true</value>
		        <read-only>false</read-only>
		      </preference>
		      <preference>
		        <name>viewTagMap</name>
		        <value>true</value>
		        <read-only>false</read-only>
		      </preference>   
		      <preference>
		        <name>viewComment</name>
		        <value>true</value>
		        <read-only>false</read-only>
		      </preference>   
		      <preference>
		        <name>viewVote</name>
		        <value>true</value>
		        <read-only>false</read-only>
		      </preference>                               
		      <preference>
		        <name>scriptName</name>
		        <value></value>
		        <read-only>false</read-only>
		      </preference>
		      <preference>      
		        <name>usecase</name>
		        <value>path</value>
		        <!--
		        <value>Document</value>
		        <value>Using a JCR query</value>
		        <value>Using a script</value>
		         -->
		        <read-only>false</read-only>
		      </preference>
		            <!--
		        Enable search root location
		      -->
		      <preference>
		        <name>enableSearch</name>
		        <value>false</value>
		        <read-only>false</read-only>
		      </preference>
		      <!--
		        Specify the search root location. This preference affect only when enableSearch is true
		        Notice: Have to specify the workspace name
		      -->
		      <preference>
		        <name>searchLocation</name>
		        <value>collaboration:/Documents/Live</value>
		        <read-only>false</read-only>
		      </preference>             
		      
		      <preference>
		        <name>isAllowPublish</name>
		        <value>false</value>
		        <read-only>false</read-only>
		      </preference>            
				</preferences>				
    	</portlet>
      <title>Content Browser</title>
			<access-permissions>*:/platform/users</access-permissions>   
      <show-info-bar>true</show-info-bar>
      <show-application-mode>true</show-application-mode>
    </portlet-application>  
  </page>
  
  <page>
    <name>WorkflowController</name>
    <access-permissions>*:/platform/users</access-permissions>
    <edit-permission>*:/platform/administrators</edit-permission>   
           
    <portlet-application>
    	<portlet>
    		<application-ref>workflow</application-ref>
				<portlet-ref>WorkflowControllerPortlet</portlet-ref>
    	</portlet>
      <title>Business Process</title>
			<access-permissions>*:/platform/users</access-permissions>    
      <show-info-bar>false</show-info-bar>
    </portlet-application>  
  </page>
  
    
</page-set>

