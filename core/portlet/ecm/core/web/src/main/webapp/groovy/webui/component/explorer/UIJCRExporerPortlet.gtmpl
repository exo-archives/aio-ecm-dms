<%
  def rcontext = _ctx.getRequestContext() ;
  def userAgent = uicomponent.getUserAgent();
  if(userAgent != null && userAgent.contains("MSIE 6.0")) {
	  rcontext.getJavascriptManager().importJavascript('eXo.ecm.Select_fix','/ecm/javascript/') ;
	  rcontext.getJavascriptManager().addJavascript("SelectFix.autoRepairFloatingElements(100) ;") ;
  }
%>
<div class="$uicomponent.id" id="$uicomponent.id">
	<div style="height: 0px;"><div style="width: 880px;" ><span style="display: none;"></span></div></div>
	<div  
		style="!width: expression(this.previousSibling.offsetWidth - 2 + 'px'); margin: auto; !border: 1px solid white; min-width: 880px;">
		<%
	    if (uicomponent.isFlag()) {
  	    uicomponent.renderChildren();
  	  } else {
		    String s = _ctx.appRes("UIJCRExporerPortlet.nopermission");
		    println "<div class=\"EmptyDrives\">";
			  println "<div class=\"ContainerEmptyDrives\">";
			  println s;
			  println "</div></div>";
	    }
	  %>
	</div>
</div>