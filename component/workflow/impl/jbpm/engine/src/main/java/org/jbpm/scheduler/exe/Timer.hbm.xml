<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">

  <class name="org.jbpm.scheduler.exe.Timer" 
         table="JBPM_TIMER"
         lazy="false">
    <id name="id" column="ID_"><generator class="native" /></id>
  
    <property name="name" column="NAME_" />
    <property name="dueDate" column="DUEDATE_" />
    <property name="repeat" column="REPEAT_" />
    <property name="transitionName" column="TRANSITIONNAME_" />
    <property name="exception" column="EXCEPTION_" length="4000" />

    <many-to-one name="action" 
                 column="ACTION_" 
                 foreign-key="FK_TIMER_ACTION" />
    <many-to-one name="token"   
                 column="TOKEN_" 
                 foreign-key="FK_TIMER_TOKEN"/>
    <many-to-one name="processInstance"   
                 column="PROCESSINSTANCE_" 
                 foreign-key="FK_TIMER_PRINST"/>
    <many-to-one name="taskInstance"   
                 column="TASKINSTANCE_" 
                 foreign-key="FK_TIMER_TSKINST"/>
    <any name="graphElement" id-type="long">
      <column name="GRAPHELEMENTTYPE_"/>
      <column name="GRAPHELEMENT_"/>
    </any>
  </class>

</hibernate-mapping>
