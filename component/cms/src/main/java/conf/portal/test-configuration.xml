<?xml version="1.0" encoding="ISO-8859-1"?>
<configuration>
  <component>
    <key>org.exoplatform.services.cms.views.ManageViewService</key>
    <type>org.exoplatform.services.cms.views.impl.ManageViewServiceImpl</type>
    
    <component-plugins>
    	<component-plugin> 
        <name>manage.view.plugin</name>
        <set-method>setManageViewPlugin</set-method>
        <type>org.exoplatform.services.cms.views.impl.ManageViewPlugin</type>
        <description>this plugin manage user view</description>
        <init-params>
		      <object-param>	      
		        <name>AdminViewData</name>
		        <description>View configuration of Admin</description>
		        <object type="org.exoplatform.services.cms.views.impl.ViewDataImpl">
		          <field  name="id"><string>admin</string></field>
		          <field  name="viewName"><string>admin</string></field>
		          <field  name="permissions"><string>member:/admin</string></field>
		          <field  name="tabs"><string>tab1;tab2;tab3;tab4</string></field>
		          <field  name="buttons"><string>tab1:button1; tab2:button2;tab3:button3</string></field>
		          <field  name="template"><string>list</string></field>		          
		        </object>
		      </object-param>
		      <object-param>	      
		        <name>ExoViewData</name>
		        <description>View configuration of exo</description>
		        <object type="org.exoplatform.services.cms.views.impl.ViewDataImpl">
		          <field  name="id"><string>exo</string></field>
		          <field  name="viewName"><string>exo</string></field>
		          <field  name="permissions"><string>member:/user;owner:/user</string></field>
		          <field  name="tabs"><string>tab1;tab2;tab3</string></field>
		          <field  name="buttons"><string>tab1:button1; tab2:button2;tab3:button3</string></field>
		          <field  name="template"><string>mac</string></field>		          
		        </object>
		      </object-param>
		      <object-param>	      
		        <name>DefaultViewData</name>
		        <description>View configuration of exo</description>
		        <object type="org.exoplatform.services.cms.views.impl.ViewDataImpl">
		          <field  name="id"><string>default</string></field>
		          <field  name="viewName"><string>default</string></field>
		          <field  name="permissions"><string>*:/user;member:/admin</string></field>
		          <field  name="tabs"><string>tab1;tab2;tab3</string></field>
		          <field  name="buttons"><string>tab1:button1; tab2:button2;tab3:button3</string></field>
		          <field  name="template"><string>mac</string></field>		          
		        </object>
		      </object-param>
	      </init-params>	
      </component-plugin> 
    </component-plugins>
    <init-params>
    	<value-param>
	      <name>tabs</name>
	      <value>tab1 ; tab2 ; tab3 </value>
	    </value-param>   
	    <value-param>
	      <name>buttons</name>
	      <value>button1 ; button2 ; button3</value>
	    </value-param>
    </init-params>
  </component>
  <external-component-plugins>
    <target-component>org.exoplatform.services.database.HibernateService</target-component>
    <component-plugin> 
      <name>add.hibernate.mapping</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.services.database.impl.AddHibernateMappingPlugin</type>
      <init-params>
        <values-param>
          <name>hibernate.mapping</name>
          <value>org/exoplatform/services/cms/views/impl/ViewDataImpl.hbm.xml</value>          
        </values-param>        
      </init-params>
    </component-plugin>
  </external-component-plugins>
</configuration>
