					<groupId>org.codehaus.mojo</groupId>
					<artifactId>exec-maven-plugin</artifactId>
					<version>1.1.1</version>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>build-helper-maven-plugin</artifactId>
					<version>1.4</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-surefire-plugin</artifactId>
					<configuration>
						<systemProperties>
							<property>
								<name>org.apache.commons.logging.Log</name>
								<value>org.apache.commons.logging.impl.SimpleLog</value>
							</property>
							<property>
								<name>org.apache.commons.logging.simplelog.defaultlog</name>
								<value>info</value>
							</property>
							<property>
								<name>org.apache.commons.logging.simplelog.log.[eXo]</name>
								<value>debug</value>
							</property>
							<property>
								<name>org.apache.commons.logging.simplelog.log.net.hibernate</name>
								<value>warn</value>
							</property>
							<property>
								<name>java.naming.factory.initial</name>
								<value>org.exoplatform.services.naming.SimpleContextFactory</value>
							</property>
						</systemProperties>
					</configuration>
				</plugin>
      </plugins>
