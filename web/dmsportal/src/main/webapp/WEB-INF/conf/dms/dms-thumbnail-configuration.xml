<?xml version="1.0" encoding="ISO-8859-1"?>
<configuration>  

  <component>
	  <key>org.exoplatform.services.cms.thumbnail.ThumbnailService</key>  
	  <type>org.exoplatform.services.cms.thumbnail.impl.ThumbnailServiceImpl</type>      
	  <init-params>
      <value-param>
      	<name>smallSize</name>
	      <value>32x32</value>
      </value-param>
      <value-param>
      	<name>mediumSize</name>
	      <value>64x64</value>
      </value-param> 
      <value-param>
      	<name>bigSize</name>
	      <value>300x300</value>
      </value-param>
      <value-param>
      	<name>enable</name>
	      <value>true</value>
      </value-param>
      <value-param>
        <name>mimetypes</name>
        <value>image/jpeg;image/png;image/gif;image/bmp</value>
      </value-param>      
    </init-params>
	</component>
	
	<component>    
    <type>org.exoplatform.services.cms.thumbnail.impl.ThumbnailRESTService</type>    
  </component>	

</configuration>
