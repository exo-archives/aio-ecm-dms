<head>
  <style>
    .tabNormal {
      float: left;
      background: url('/eXoECMResources/skin/images/metadata/Metadata.gif') repeat-x left top;
      height: 20px; width: 120px; line-height: 20px; text-align: center;
      border: solid 1px #a3abb6;
      font-size: 12px; font-weight: bold;
    }
    
    .tabSelected {
      float: left;
      background: url('/eXoECMResources/skin/images/metadata/Metadata.gif') repeat-x left -20px;
      height: 20px; width: 120px; line-height: 20px; text-align: center;
      border: solid 1px #a3abb6;
      font-size: 12px; font-weight: bold;
    }
    
    .ContentBlock{
      margin:20px 20px 20px 20px;
    }
    
    .LabelMetadata {
    	border-bottom: 1px dotted #666666;
    	padding-bottom: 5px;
      height:14px;
      font-weight: bold;
      font-size: 12px;
      font-style: Verdana;
      text-align: left ;
      color: #f68822;
    }
    
    .Header {
      font-weight: bold;
      font-size: 14px;
      font-style: Verdana;
      text-align: left ;      
    }
    
  </style>  
</head>

<%
	public void renderDCValues(String name) {
  	def node = uicomponent.getViewNode("rma:destroyable") ;
		def values = uicomponent.getMultiValues(node, name) ;
		if(values.size() == 0) { %>
	    <div style="overflow:hidden width:99.5%; margin-top:5px; margin-left:5px">
	      <div style="float:left"><img style="height:4px; vertical-align:middle; margin-right:3px" alt="" src='/ecm/skin/images/metadata/rect.gif'/></div>     
	      <div style="text-align: left"><%=_ctx.appRes("Destroyable.view.label.not-available")%></div>
	    </div>    		
	<%} else {
			for(value in values) { %>
	      <div style="overflow:hidden width:99.5%; margin-top:5px; margin-left:5px">
	        <div style="float:left"><img style="height:4px; vertical-align:middle; margin-right:3px" alt="" src='/ecm/skin/images/metadata/rect.gif'/></div>     
	        <div style="font-size:12px; text-align: left ">$value</div>
	      </div>    			
	<%	}
		}
	}
%>
<div class="Header">RMA:DESTROYABLE</div>
<div id="rma_destroyable">     
  <div class="ContentBlock" style="width:43%">
    <div class="Title">
      <div class="LabelMetadata"><%=_ctx.appRes("Destroyable.view.label.destruction-date")%></div>
    </div>          
    <div><% renderDCValues("rma:destructionDate") %></div>
  </div>
</div>
<%/* start render action*/%>
<div class="UIAction"> 
  <table class="ActionContainer">
  	<tr>
  		<td>
		  	<div onclick="<%=uicomponent.event("EditProperty", "rma:destroyable")%>" class="ActionButton LightBlueStyle">
					<div class="ButtonLeft">
						 <div class="ButtonRight">
						  <div class="ButtonMiddle" title="<%=_ctx.appRes("Destroyable.view.tooltip.add-edit")%>">
						    <a href="javascript:void(0);"><%=_ctx.appRes("Destroyable.view.action.add-edit")%></a>
					    </div>
				    </div>
				  </div>
				</div>
		  	<div onclick="<%=uicomponent.event("Cancel")%>" class="ActionButton LightBlueStyle">
					<div class="ButtonLeft">
					  <div class="ButtonRight">
						  <div class="ButtonMiddle" title="<%=_ctx.appRes("Destroyable.view.tooltip.cancel")%>">
						    <a href="javascript:void(0);"><%=_ctx.appRes("Destroyable.view.action.cancel")%></a>
				      </div>
				    </div>
			    </div>
				</div>
  		</td>
  	</tr>
  </table>
</div>
<%/* end render action*/%>