<project>
  <parent>
    <groupId>org.exoplatform.ecm.contentvalidation</groupId>
    <artifactId>config</artifactId>
    <version>1.0rc1</version>
  </parent> 

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.exoplatform.ecm.contentvalidation.bp</groupId>
  <artifactId>config</artifactId>
  <version>1.0rc1</version>
  <name>Content validation business processes configuration</name>
  <packaging>pom</packaging>

  <modules>
    <module>bonita/content-publishing</module>
    <module>jbpm/content-publishing</module>
  </modules>

  <developers>
    <developer>
      <name>Brice Revenant</name>
      <organization>Bull S.A.S</organization>
      <organizationUrl>http://www.bull.com</organizationUrl>
    </developer>
  </developers>

  <build>
    <resources>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.xml</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/conf</directory>
        <includes>
          <include>**/*.xml</include>
          <include>**/*.gtmpl</include>
          <include>**/*.xpdl</include>
          <include>**/*.properties</include>
          <include>**/*.gif</include>
        </includes>
      </resource>
    </resources>
  </build>
  
  <profiles>
    <profile>
      <id>default</id>
      <activation>
        <property><name>default</name></property>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <org.exoplatform.ecm.dms.version>2.3rc1</org.exoplatform.ecm.dms.version>
		<org.exoplatform.ecm.workflow.version>1.0rc1</org.exoplatform.ecm.workflow.version>
		<org.exoplatform.ecm.contentvalidation.version>1.0rc1</org.exoplatform.ecm.contentvalidation.version>
		<exo.test.classes>Test</exo.test.classes>
        <exo.test.skip>true</exo.test.skip>
        <bonita.version>3.0</bonita.version>        
      </properties>
    </profile>
  </profiles>
  
</project>
