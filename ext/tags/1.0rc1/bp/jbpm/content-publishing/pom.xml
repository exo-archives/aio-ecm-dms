<project>
  <parent>
    <groupId>org.exoplatform.ecm.contentvalidation.bp</groupId>
    <artifactId>config</artifactId>
    <version>1.0rc1</version>
  </parent> 

  <modelVersion>4.0.0</modelVersion>
  <artifactId>exo.ecm.contentvalidation.bp.jbpm.content.publishing</artifactId>
  <version>${org.exoplatform.ecm.contentvalidation.version}</version>
  <packaging>jar</packaging>
  <name>eXo content publishing BP for jBPM</name>
  <url>http://www.exoplatform.org</url>
  <description>eXo content publishing BP for jBPM</description>
 
  <dependencies>
    <dependency>
      <groupId>org.exoplatform.ecm.workflow</groupId>
      <artifactId>exo.ecm.workflow.component.workflow.impl.jbpm.facade</artifactId>
      <version>${org.exoplatform.ecm.workflow.version}</version>
      <scope>provided</scope>
    </dependency>
  
    <dependency>
      <groupId>org.exoplatform.ecm.dms</groupId>
      <artifactId>exo.ecm.dms.component.cms</artifactId>
      <version>${org.exoplatform.ecm.dms.version}</version>
      <scope>provided</scope>
    </dependency> 
  </dependencies>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>createbpstructure</id>
            <goals><goal>run</goal></goals>
            <phase>compile</phase>
            <configuration>
              <tasks>
                <move todir="target/classes/classes">
                  <fileset dir="target/classes">
                    <include name="org/**"/>
                  </fileset>
                </move>
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>  
</project>
