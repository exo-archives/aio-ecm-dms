<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>org.exoplatform.ecm.dms.ext.contentvalidation</groupId>
    <artifactId>bp</artifactId>
    <version>3.0.0-Alpha01</version>
  </parent> 
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.exoplatform.ecm.dms.ext.contentvalidation.bp</groupId>
  <artifactId>exo.ecm.dms.ext.contentvalidation.bp.bonita.content-publishing</artifactId>
  <packaging>jar</packaging>
  <name>eXo content publishing BP for Bonita</name>
  <url>http://www.exoplatform.org</url>
  <description>eXo content publishing BP for Bonita</description>
 
  <dependencies>
  
    <dependency>
      <groupId>org.exoplatform.ecm.dms.core</groupId>
      <artifactId>exo.ecm.dms.core.component.cms</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency> 
    
    <dependency>
      <groupId>org.exoplatform.ecm.workflow</groupId>
      <artifactId>exo.ecm.workflow.component.workflow.impl.bonita</artifactId>
      <version>${org.exoplatform.ecm.workflow.version}</version>
      <scope>provided</scope>
    </dependency>
    
    <dependency>
      <groupId>org.ow2.bonita</groupId>
      <artifactId>bonita-api</artifactId>
      <version>${bonita.version}</version>
      <scope>provided</scope>
    </dependency>
    
  </dependencies>
  
  <build>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-antrun-plugin</artifactId>
          <executions>
            <execution>
              <id>createbpstructure</id>
              <goals><goal>run</goal></goals>
              <phase>compile</phase>
              <configuration>
                <tasks>
                  <move todir="target/classes">
                    <fileset dir="target/classes">
                      <include name="hero/**" />
                    </fileset>
                  </move>
                </tasks>
              </configuration>
            </execution>
          </executions>
        </plugin>
      </plugins>
  </build>
  
</project>
