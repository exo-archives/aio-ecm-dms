<project>
  <parent>
    <groupId>org.exoplatform.ecm.dms.ext</groupId>
    <artifactId>contentvalidation</artifactId>
    <version>2.5.1-SNAPSHOT</version>
  </parent> 

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.exoplatform.ecm.dms.ext.contentvalidation</groupId>
  <artifactId>bp</artifactId>
  <name>eXo Content validation business processes configuration</name>
  <packaging>pom</packaging>

  <modules>
    <module>bonita/content-publishing</module>
    <module>jbpm/content-publishing</module>
  </modules>

  <build>
    <resources>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.xml</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/conf</directory>
        <includes>
          <include>**/*.xml</include>
          <include>**/*.gtmpl</include>
          <include>**/*.xpdl</include>
          <include>**/*.properties</include>
          <include>**/*.gif</include>
        </includes>
      </resource>
    </resources>
  </build>
  
  <profiles>
    <profile>
      <id>default</id>
      <activation>
        <property><name>default</name></property>
        <activeByDefault>true</activeByDefault>
      </activation>
    </profile>
  </profiles>
  
</project>
