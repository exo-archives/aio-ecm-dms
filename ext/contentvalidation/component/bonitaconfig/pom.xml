<project>
  <parent>
    <groupId>org.exoplatform.ecm.dms.ext</groupId>
    <artifactId>contentvalidation</artifactId>
    <version>2.4-SNAPSHOT</version>
  </parent> 

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.exoplatform.ecm.dms.ext.contentvalidation</groupId>
  <artifactId>exo.ecm.dms.ext.contentvalidation.component.bonitaconfig</artifactId>
  <packaging>jar</packaging>
  <name>eXo Content Validation with Bonita workflow</name>
  <url>http://www.exoplatform.org</url>
  <description>eXo Content Validation with Bonita workflow</description>

  <dependencies>
    <dependency>
      <groupId>org.codehaus.groovy</groupId>
      <artifactId>groovy-all-minimal</artifactId>
      <version>1.5.4</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <outputDirectory>target/classes</outputDirectory>
    <testSourceDirectory>src/test/java</testSourceDirectory>
    <testOutputDirectory>target/test-classes</testOutputDirectory>

    <resources>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.xml</include>
          <include>**/*.txt</include>
          <include>**/*.groovy</include>
          <include>**/*.gtmpl</include>
        </includes>
      </resource>
    </resources>

  </build>  
</project>
