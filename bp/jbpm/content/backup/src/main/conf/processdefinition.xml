<?xml version="1.0" encoding="UTF-8"?>

<process-definition name="content-backup"> 

  <description>backup a document</description>
  
  <!-- SWIMLANES -->
  <swimlane name="initiator" />  

  <!-- START-STATE -->
  <start-state name="start">
    <task swimlane="initiator"/> 
    <transition to="manage-backup"/>  
  </start-state>
  
  <state name="manage-backup">
    <event type="node-enter">
      <action class="org.exoplatform.processes.contentbackup.ScheduleBackupTimerActionHandler"/>
    </event>
    <transition name="backup-done" to="end"/>  
  </state>  

  <!-- END-STATE -->
  <end-state name="end" />

</process-definition>
